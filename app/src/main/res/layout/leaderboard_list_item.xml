<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/colorPrimaryTranslucent"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleHover="true"
    app:mrl_rippleRoundedCorners="2dp">

    <RelativeLayout
        android:id="@+id/leaderboard_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_theme"
        tools:ignore="UselessParent">

        <com.prembros.programming.ProQuizApp.CustomTextViewLight
            android:id="@+id/leaderboard_header_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal|top" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/leaderboard_header_textView"
            android:background="@color/black_overlay"/>

        <com.prembros.programming.ProQuizApp.CustomTextViewLight
            android:id="@+id/leaderboard_child_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/colorText"
            android:gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv1"/>

    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>